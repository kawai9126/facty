<h2 class='item_new'>グッズ投稿ページ</h2>
  <div class='item_new'>
    
    <div>
    <%= form_with model: @item ,url: public_items_path, method: :post ,local:true do |f| %>

    <div>
      <label>商品画像：</label>
      <%= f.attachment_field :image %>
    </div>
    
    <div>
      <label>商品名：</label>
      <%= f.text_field :name %>
    </div>
    
    <div>
      <label>商品説明：</label>
      <%= f.text_field :contents %>
    </div>

    <div>
      <label>ジャンル：</label>
      <%= f.collection_select  :genre_id,Genre.all,:id, :name , :prompt => "選択してください" %>
    </div>
    
    <div>
      <label>税抜価格：</label>
      <%= f.text_field :non_price %>
    </div>
    
    <div>
      <label>販売ステータス：</label>
        <div>
            <%= f.radio_button :is_sale, :true %><%= f.label :is_sale, "販売中" %>
            <%= f.radio_button :is_sale, :false %><%= f.label :is_sale, "販売停止中" %>
        </div>  
        <%= f.submit '新規登録', class: "btn btn-outline-success btn-lg" %>
        <% end %>
    </div>
  </div>
