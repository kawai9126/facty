<h2 class='item_edit'>グッズ編集</h2>
<div class='item_edit'>
<%= form_with model: @item ,url: public_item_path(@item),method: :patch ,local:true do |f| %>
    <div>
        <label>商品画像：</label>
        <%= f.attachment_field :image %>
    </div>
    
    <div>
        <label>商品名：</label>
        <%= f.text_field :name %>
    </div>
    
    <div>
        <label>商品説明：</label>
        <%= f.text_field :contents%>
    </div>
    
    <div>
        <label>ジャンル：</label>
        <%= f.collection_select :genre_id,Genre.all,:id, :name %>
    </div>
    
    <div>
        <label>税抜価格：</label>
        <%= f.text_field :non_price %>
    </div>
    
    <div>
        <label>販売ステータス：</label>
        <%= f.radio_button :is_sale, :true %><%= f.label :is_sale, "販売中", {value: :true, style: "display: inline-block;"} %> <%= f.radio_button :is_sale, :false %><%= f.label :is_sale, "販売停止中", {value: :false, style: "display: inline-block;"} %>
    </div>
    
    <%= f.submit '変更を保存', class: "btn btn-outline-success btn-lg" %>
    <% end %>
</div>
