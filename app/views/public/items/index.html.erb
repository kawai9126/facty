<h2>新着グッズ(全<%= @totals.count %>件)</h2>
<%= link_to " + ", new_public_item_path, class: "add_btn"%>
<table>
</div>
 <% @items.each do |item| %>
 <div>
    <div>
        <div>
            <%= link_to public_item_path(item.id) do %>
            <%= attachment_image_tag item, :image, size: "400x300", fallback: "no_image.jpg"%>
        </div>
        <div>
            <%= item.end_user.nick_name %>
        </div>
        <p>
            <%= item.name %>
        </p>
        <p>
            ¥<%= item.non_price.to_s(:delimited) %>
        </p>
        <p>
            <% if item.is_sale == true %>
                販売中
            <% else %>
                販売停止中
            <% end %>
        </p>
        <div class="item_<%= item.id %>">
            <%= render 'favorites', item: item %>
        </div>
        <p>
            <%= item.created_at.strftime('%Y/%m/%d') %>
        </p>
        <% end %>
    </div>
</div>
<% end %>
<div>
    <%= paginate @items %>
</div>
