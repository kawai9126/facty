<h2>配送先編集</h2>
<div>
    <%= form_with model: @shipping_address,url: public_shipping_address_path(@shipping_address) , local:true do |f| %>
    <table>
        <tr>
            <th>郵便番号(ハイフンなし)</th>
            <td><%= f.text_field :mail_number %></td>
        </tr>
        <tr>
            <th>住所</th>
            <td><%= f.text_area :delivery_address %></td>
        </tr>
        <tr>
            <th>宛名</th>
            <td><%= f.text_field :direction %></td>
        </tr>
        <div><%= f.submit '変更内容を保存', class: "btn btn-success"  %></div>
    <% end %>
</div>
  
