<h1 class='order_check'>注文情報</h1>
    <div>
        <table class='order_check'>
            <tr>
                <th class='info'>商品名</th>
                <th class='info'>単価(税込)</th>
                <th class='info'>数量</th>
                <th class='info'>小計</th>
            </tr>
            <% @cart_items.each do |cart| %>
            <tr>
                <td class='info'><%= attachment_image_tag cart.item, :image, format: 'jpeg', size: "50x50" %>  <%= cart.item.name %></td>
                <td class='info'><%= cart.item.add_tax_price.to_s(:delimited)%></td>
                <td class='info'><%= cart.number %></td>
                <td class='info'><%= cart.add_tax_price_total %></td>
            </tr>
            <% end %>
        </table>
        <table class='order_check'>
            <tr>
                <th>送料</th>
                <td><%= session[:save_order]["shipping_fee"] %></td>
            </tr>
            <tr>
                <th class='info_top'>商品合計</th>
                <td class='info_top'><%= current_end_user.total_price %></td>
            </tr>
            <tr>
                <th class='info_top'>請求金額</th>
                <td class='info_top'><%= session[:save_order]["invoice"] %></td>
            </tr>
        </table>
    </div>
<div class='order_check'>
    <h4>支払方法</h4>
    <div><%= session[:save_order]["payment_method"] %></div>
    <h4>お届け先</h4>
    <div>〒<%= session[:save_order]["mail_number"] %> <%= session[:save_order]["delivery_address"] %></div> 
    <div><%= session[:save_order]["direction"]  %></div>
  
</div>
<div class='order_check'>
    <%= button_to '確定する', public_orders_path, method: :post, class: "btn btn-outline-success btn-lg" %>
</div>