 <h2>注文履歴詳細</h2>
    <div class="col-xs-6">
        <table class="table_p_oe">
            <tr>注文情報<br>
                <th>注文日</th>
                <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
            </tr>
            <tr>
                <th>配送先</th>
                <td>
                  〒<%= @order.mail_number %><br>
                  <%= @order.delivery_address %><br>
                  <%= @order.direction %>
                </td>
            </tr>
            <tr>
                <th>支払方法</th>
                <td><%= @order.payment_method %></td>
            </tr>
            <tr>
                <th>注文ステータス</th>
                <td><%= @order.order_status %></td>
            </tr>
        </table>
    </div>
    
    <div>
        <table>
            <tr>請求情報
                <th>商品合計</th>
                <td><%= (@order.invoice - @order.shipping_fee).to_s(:delimited) %></td>
            </tr>
            <tr>
                <th>配送料</th>
                <td><%= @order.shipping_fee %></td>
            </tr>
            <tr>
                <th>ご請求額</th>
                <td><%= @order.invoice.to_s(:delimited) %></td>
            </tr>
        </table>
    </div>

    <div>
        <table>
            <tr>注文内容
                <th>商品</th>
                <th>単価（税込）</th>
                <th>個数</th>
                <th>小計</th>
            </tr>
            <% @order_items.each do |order_item| %>
            <tr>
                <td><%= order_item.item.name %></td>
                <td><%= order_item.tax_included_price.to_s(:delimited) %></td>
                <td><%= order_item.number %></td>
                <td><%= (order_item.tax_included_price * order_item.number).to_s(:delimited) %></td>
            </tr>
        <% end %>
         </table>
    </div>
