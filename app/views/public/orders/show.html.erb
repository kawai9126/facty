 <h2 class='order_show'>注文履歴詳細</h2>
    <div class='order_show'>
        <table>
            <tr>注文情報<br>
                <th>注文日</th>
                <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
            </tr>
            <tr>
                <th>配送先</th>
                <td>
                  〒<%= @order.mail_number %><br>
                  <%= @order.delivery_address %><br>
                  <%= @order.direction %>
                </td>
            </tr>
            <tr>
                <th>支払方法</th>
                <td><%= @order.payment_method %></td>
            </tr>
        </table>
    </div>
    
    <div class='order_show'>
        <table>
            <tr>請求情報
                <th>商品合計</th>
                <td><%= (@order.invoice - @order.shipping_fee).to_s(:delimited) %>円</td>
            </tr>
            <tr>
                <th>配送料</th>
                <td><%= @order.shipping_fee %>円</td>
            </tr>
            <tr>
                <th>ご請求額</th>
                <td><%= @order.invoice.to_s(:delimited) %>円</td>
            </tr>
        </table>
    </div>

    <div class='order_show'>
        <table>
            <tr>
                <th>注文内容</th>
                <th>商品</th>
                <th>単価（税込）</th>
                <th>個数</th>
                <th>小計</th>
            </tr>
            <% @order_items.each do |order_item| %>
            <tr>
                <td><%= order_item.item.blank? ? "商品なし" : order_item.item.name %></td>
                <td><%= order_item.tax_included_price.to_s(:delimited) %>円</td>
                <td><%= order_item.number %></td>
                <td><%= (order_item.tax_included_price * order_item.number).to_s(:delimited) %>円</td>
            </tr>
        <% end %>
         </table>
    </div>
