<div>
<h2>注⽂履歴⼀覧</h2>
    <table>
        <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>注文詳細</th>
        </tr>
      <% @orders.each do |order| %>
        <tr>
            <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
            <td>
                <div>
                  〒<%= order.mail_number %><br>
                  <%= order.delivery_address %><br>
                  <%= order.direction %> <br>
                </div>
            </td>
            <td>
                <% @order_items = order.order_items %>
                <% @order_items.each do |order_item| %>
                <%= order_item.item.name %><br>
                <% end %>
            </td>
              <td><%= order.invoice %></td>
              <td><%= link_to '表示する', public_order_path(order),class: "btn btn-primary" %></td>
        </tr>
      <% end %>
    </table>
    <h2>販売履歴一覧</h2>
    <table>
        <tr>
            <td>購入日時</td>
            <td>購入者</td>
            <td>注文個数</td>
        </tr>
        <% @orders.each do |order| %>
        <tr>
            <td><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'), admin_order_path(order.id) %></td>
            <td><%= order.end_user.user_name %></td>
            <td><%= order.total_order %></td>
            <td><%= order.order_status %></td>
        </tr>
        <% end %>
    </table>
      <div>
        <%#= paginate @orders %>
      </div>
  </div>

</div>
