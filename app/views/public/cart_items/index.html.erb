<h1>ショッピングカート</h1>
<div><%= link_to 'カートを空にする', destroy_all_public_cart_items_path, method: :delete, class: "btn btn-outline-danger btn-lg" %></div>
<table>
    <tr>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
    </tr>
    <% @cart_items.each do |cart| %>
    </tr>
    <td><%= attachment_image_tag cart.item, :image, format: 'jpeg', size: "125x100" %> <%= cart.item.name %></td>
    <td><%= cart.item.add_tax_price.to_s(:delimited)%>円</td>
    <td><%= form_with model: cart, url:public_cart_item_path(cart), local:true do |f| %>
         <%= f.select :number, options_for_select((1..10), {selected: cart.number} ) %>
         <%= f.submit '変更' %>
     　 <% end %>
    <td><%= cart.add_tax_price.total %>円</td>
    <td><%= link_to '削除', public_cart_item_path(cart), method: :delete, class: "btn btn-outline-danger" %></td>
    </tr>
    <% end %>
    
</table>

<div><%=link_to "買い物を続ける", public_items_path, class: "btn btn-outline-primary" %></div>
<div>合計金額 <%= current_end_user.total_price.to_s(:delimited) %>円</div>
<div><%=link_to "購入情報入力に進む", new_public_order_path, class: "btn btn-outline-success btn-lg" %></div>
