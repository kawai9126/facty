<h2>情報編集</h2>
<div>
<%= form_with model: @end_user,url: public_end_user_path, local:true do |f| %>
    <table>
        <tr>
            <th>ニックネーム</th>
            <td><%= f.text_field :nick_name %></td>
        </tr>
        <tr>
            <th>名前</th>
            <td><%= f.text_field :user_name %></td>
        </tr>
        <tr>
            <th>郵便番号</th>
            <td><%= f.text_field :mail_number %></td>
        </tr>
        <tr>
            <th>住所</th>
            <td><%= f.text_area :adress %></td>
        </tr>
        <tr>
            <th>電話番号</th>
            <td><%= f.text_field :tel %></td>
        </tr>
        <tr>
            <th>メールアドレス</th>
            <td><%= f.email_field :email %></td>
        </tr>
    </table>
    <div>
        <%= f.submit "編集内容を保存", class: "btn btn-success" %>
    </div>
<% end %>
</div>
