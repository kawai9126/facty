<h2 class='user_edit'>情報編集</h2>
<div>
<%= form_with model: @end_user,url: public_end_user_path, local:true do |f| %>
    <table class='user_edit'>
        <tr>
            <td><%= f.attachment_field :profile_image, class:"form-control-file" %></td>
        </tr>
        <tr>
            <th>ニックネーム</th>
            <td><%= f.text_field :nick_name %></td>
        </tr>
        <tr>
            <th>自己紹介</th>
            <td><%= f.text_field :introduction, autofocus: true, id:"inputintroduction" %></td>
        </tr>
        <tr>
            <th>名前</th>
            <td><%= f.text_field :user_name %></td>
        </tr>
        <tr>
            <th>郵便番号</th>
            <td><%= f.text_field :mail_number %></td>
        </tr>
        <tr>
            <th>住所</th>
            <td><%= f.text_area :adress %></td>
        </tr>
        <tr>
            <th>電話番号</th>
            <td><%= f.text_field :tel %></td>
        </tr>
        <tr>
            <th>メールアドレス</th>
            <td><%= f.email_field :email %></td>
        </tr>
    </table>
    <div class='user_edit_btn'>
        <%= f.submit "編集内容を保存", class: "btn btn-success" %>
    </div>
<% end %>
</div>
