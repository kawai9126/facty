<h2>マイページ</h2>

    
    <div>
        登録情報<%= link_to "編集する", edit_public_end_user_path(@end_user), class: "btn btn-sm  btn-success" %>
    </div>
    
    <table>
        <tr>
            <th>ニックネーム</th>
            <td><%= @end_user.nick_name %></td>
          </tr>
    
        <tr>
            <th>名前</th>
            <td><%= @end_user.user_name %></td>
        </tr>
    
        <tr>
            <th>郵便番号</th>
            <td><%= @end_user.mail_number %></td>
        </tr>
    
        <tr>
            <th>住所</th>
            <td><%= @end_user.adress %></td>
        </tr>
    
        <tr>
            <th>電話番号</th>
            <td><%= @end_user.tel %></td>
        </tr>
    
        <tr>
            <th>メールアドレス</th>
            <td><%= @end_user.email %></td>
        </tr>
    </table>
    <table>
    <div>投稿一覧</div>
    <% @items.each do |item| %>
    <div>
        <div>
            <div>
                <%= link_to public_item_path(item.id) do %>
                <%= attachment_image_tag item, :image, size: "400x300", fallback: "no_image.jpg"%>
                <% end %>
            </div>
            <div>
                <%#= item.end_user.nick_name %>
            </div>
            <p>
                <%= link_to item.name, public_item_path(item.id) %>
            </p>
            <p>
                ¥<%= item.non_price.to_s(:delimited) %>
            </p>
            <p>
                投稿日時：<%= item.created_at.strftime('%Y/%m/%d') %>
            </p>
        </div>
    </div>
    <% end %>

<div>
    発送先
</div>

<div>
    注文履歴
</div>

</div>

