<div class="col-md-8 offset-md-1">
    <h1>フォロー中のユーザー</h1>
    <table class="table">
        <tr>
            <th>プロフィール画像</th>
            <th>ニックネーム</th>
            <th>自己紹介</th>
            <th colspan="3"></th>
        </tr>
        <% @users.each do |user| %>
        <tr>
            <td>
                <%= attachment_image_tag user, :profile_image,  format: 'jpeg', size: "40x40", fallback: "no_image.jpg", class: "rounded-circle" %>
            </td>
            <td>
                <%= user.nick_name %>
            </td>
            <td>
                <%= user.introduction %>
            </td>
            <td>
                <%= link_to "詳細を見る",public_end_user_path(user) %>
            </td>
        </tr>
        <% end %>
    </table>
</div>