<h2 class='registration'>新規登録ページ</h2>

<%= form_with model: @end_user, url: end_user_registration_path, local: true do |f| %>
  
  <div class="registration">
    ニックネーム<br />
    <%= f.text_field :nick_name, autofocus: true, autocomplete: "nick_name" %>
  </div>
  
  <div class="registration">
    名前<br />
    <%= f.text_field :user_name, autofocus: true, autocomplete: "user_name" %>
  </div>

  <div class="registration">
    メールアドレス<br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  
  <div class="registration">
    郵便番号(ハイフンなし)<br />
    <%= f.text_field :mail_number, autofocus: true, autocomplete: "mail_number" %>
  </div>
  
  <div class="registration">
    住所<br />
    <%= f.text_area :adress, autofocus: true, autocomplete: "adress" %>
  </div>
  
  <div class="registration">
    電話番号(ハイフンなし)<br />
    <%= f.text_field :tel, autofocus: true, autocomplete: "tel" %>
  </div>

  <div class="registration">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="registration">
    <%= f.label :確認のためパスワードをもう一度お願いします %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="registration">
    <%= f.submit "登録" %>
  </div>
<% end %>
