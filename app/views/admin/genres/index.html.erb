<h2>グッズのジャンル ⼀覧・追加</h2>
    <div>
        <%= form_with model: @genre ,url: admin_genres_path ,local:true do |f| %>
        <div>
            ジャンル名
            <%= f.text_field :name %>
            <%= f.submit '新規登録', class: "btn btn-success" %>
        </div>
        <% end %>
        <table>
            <div>グッズのジャンル</div>
            <% @genres.each do |genre| %>
            <tr>
                <td><%= genre.name %></td>
                <td><%= link_to "編集する", edit_admin_genre_path(genre),data: {"turbolinks"=>false}, class: "btn btn-sm btn-success" %></td>
            </tr>
            <% end %>
        </table>
    </div>
