<h2 class='order_index'>注文履歴一覧</h2>
<table class='order_index'>
    <tr>
        <td>購入日時</td>
        <td>購入者</td>
        <td>注文個数</td>
    </tr>
    <% @orders.each do |order| %>
    <tr>
        <td><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'), admin_order_path(order.id) %></td>
        <td><%= order.end_user.user_name %></td>
        <td><%= order.total_order %></td>
    </tr>
    <% end %>
</table>
<div class='order_index'>
    <%= paginate @orders %>
</div>