<h2 class='order_index'>注文履歴一覧</h2>
<table class='order_index'>
    <tr>
        <th class='info'>購入日時</th>
        <th class='info'>購入者</th>
        <th class='info'>購入商品</th>
        <th class='info'>注文個数</th>
    </tr>
    <% @orders.each do |order| %>
    <tr>
        <td class='info'><%= link_to order.created_at.strftime('%Y/%m/%d'), admin_order_path(order.id) %></td>
        <td class='info'><%= order.end_user.user_name %></td>
        <td class='info'><%= order.item.name %></td>
        <td class='info'><%= order.total_order %></td>
    </tr>
    <% end %>
</table>
<div class='order_index'>
    <%= paginate @orders %>
</div>