<h2 class='admin_item_index'>商品⼀覧</h2>
 <table class='admin_item_index'>
    <tr>
        <th class='info'>商品ID</th>
        <th class='info'>投稿者</th>
        <th class='info'>商品名</th>
        <th class='info'>税抜価格</th>
        <th class='info'>ジャンル</th>
        <th class='info'>ステータス</th>
    </tr>
    <% @items.each do |item| %>
    <tr>
        <td class='info'><%= item.id %></td>
        <td class='info'><%= link_to item.end_user.user_name, admin_end_user_path(item) %></td>
        <td class='info'><%= link_to item.name, admin_item_path(item) %></td>
        <td class='info'><%= item.non_price %></td>
        <td class='info'><%= item.genre.name %></td>
        <% if item.is_sale == true %>
        <td class='info'>販売中</td>
        <% else %>
        <td class='info'>販売停止中</td>
        <% end %>
    </tr>
    <% end %>
</table>
<div class='admin_item_index'>
<%= paginate @items %>
</div>