<h2>商品⼀覧</h2>
 <table>
    <tr>
        <th>商品ID</th>
        <th>投稿者</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
    </tr>
    <% @items.each do |item| %>
    <tr>
        <td><%= item.id %></td>
        <td>投稿者</td>
        <td><%= link_to item.name, admin_item_path(item) %></td>
        <td><%= item.non_price %></td>
        <td><%= item.genre.name %></td>
        <% if item.is_sale == true %>
        <td>販売中</td>
        <% else %>
        <td>販売停止中</td>
        <% end %>
    </tr>
    <% end %>
</table>
<div>
<%= paginate @items %>
</div>